<div class="signin-container">
	<h2 class="signin-title"><i class="fa-solid fa-user-lock"></i> Sign In</h2>

	<form class="signin-form" method="POST" action="/auth/signin">
		<div class="form-group">
			<label for="email"><i class="fa-solid fa-envelope"></i> Email</label>
			<input
				type="email"
				id="email"
				name="email"
				class="input-neumorphic"
				required />
		</div>

		<div class="form-group">
			<label for="password"><i class="fa-solid fa-lock"></i> Password</label>
			<input
				type="password"
				id="password"
				name="password"
				class="input-neumorphic"
				required />
		</div>

		<button type="submit" class="btn-neumorphic">Login</button>
	</form>

	<p class="signin-footer">
		Don't have an account? <a href="/auth/register">Register</a>
	</p>
</div>
